<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App" />

    <style name="App.Theme.Main" parent="App.Theme.Base" />
    <style name="App.Theme.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:listPreferredItemHeightSmall">@dimen/all_drawer_height</item>
        <item name="android:listDivider">@color/gray_light</item>

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorOnSurface">@color/gray_dark</item>

        <item name="actionBarTheme">@style/App.ThemeOverlay.ActionBar</item>
        <item name="actionOverflowMenuStyle">@style/App.Widget.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/App.TextAppearance.Menu</item>

        <item name="android:ellipsize">end</item>
    </style>

    <style name="App.ThemeOverlay" />

    <style name="App.ThemeOverlay.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:listPreferredItemHeightSmall">@dimen/all_menu_height</item>
    </style>

    <style name="App.ThemeOverlay.Login">
        <item name="sso_facebookAction">@string/login_facebook</item>
        <item name="sso_googleAction">@string/login_google</item>
        <item name="sso_twitterAction">@string/login_twitter</item>
    </style>

    <style name="App.ThemeOverlay.Rule">
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="App.ThemeOverlay.Signup">
        <item name="sso_facebookAction">@string/signup_facebook</item>
        <item name="sso_googleAction">@string/signup_google</item>
        <item name="sso_twitterAction">@string/signup_twitter</item>
    </style>

    <style name="App.TextAppearance" />

    <style name="App.TextAppearance.Body">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/all_body_text</item>
    </style>

    <style name="App.TextAppearance.Label">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/all_button_text</item>
    </style>

    <style name="App.TextAppearance.Header">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/all_header_text</item>
    </style>

    <style name="App.TextAppearance.Hint">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/all_hint_text</item>
    </style>

    <style name="App.TextAppearance.Input">
        <item name="android:lineSpacingMultiplier">@dimen/all_input_spacing</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/all_input_text</item>
    </style>

    <style name="App.TextAppearance.Menu">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/all_menu_text</item>
    </style>

    <style name="App.TextAppearance.Section">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/all_section_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Widget" />

    <style name="App.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/App.TextAppearance.Label</item>

        <item name="android:insetLeft">@dimen/all_button_padding</item>
        <item name="android:insetRight">@dimen/all_button_padding</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="cornerRadius">@dimen/all_corner_size</item>
    </style>

    <style name="App.Widget.Button.Dark">
        <item name="android:backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="App.Widget.Button.Icon">
        <item name="iconPadding">@dimen/all_icon_padding</item>
        <item name="iconSize">@dimen/all_icon_size</item>
    </style>

    <style name="App.Widget.Button.Icon.Facebook">
        <item name="android:backgroundTint">@color/facebook</item>

        <item name="icon">@drawable/ic_facebook</item>
    </style>

    <style name="App.Widget.Button.Icon.Google">
        <item name="android:backgroundTint">@color/google</item>

        <item name="icon">@drawable/ic_google</item>
    </style>

    <style name="App.Widget.Button.Icon.Twitter">
        <item name="android:backgroundTint">@color/twitter</item>

        <item name="icon">@drawable/ic_twitter</item>
    </style>

    <style name="App.Widget.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/all_input_text</item>

        <item name="android:minHeight">0dp</item>
    </style>

    <style name="App.Widget.DropdownMenu">
        <item name="android:paddingTop">@dimen/all_input_leading</item>
        <item name="android:paddingBottom">@dimen/all_input_padding</item>

        <item name="android:textAppearance">@style/App.TextAppearance.Input</item>

        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>

        <item name="android:maxLines">1</item>
    </style>

    <style name="App.Widget.DropdownMenuLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:paddingBottom">@dimen/all_input_margin</item>

        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextAppearance">@style/App.TextAppearance.Hint</item>
    </style>

    <style name="App.Widget.NavigationView">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="App.Widget.PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">@dimen/all_menu_offset</item>

        <item name="overlapAnchor">false</item>
    </style>

    <style name="App.Widget.TextInput">
        <item name="android:paddingTop">@dimen/all_input_leading</item>
        <item name="android:paddingBottom">@dimen/all_input_padding</item>

        <item name="android:textAppearance">@style/App.TextAppearance.Input</item>
    </style>

    <style name="App.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingBottom">@dimen/all_input_margin</item>

        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextAppearance">@style/App.TextAppearance.Hint</item>
    </style>
</resources>
