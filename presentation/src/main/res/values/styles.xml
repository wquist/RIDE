<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:fontFamily">Roboto</item>

        <item name="android:textAppearanceLargePopupMenu">@style/MainTheme.Text.Button</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/all_menu_height</item>
    </style>

    <style name="MainTheme.Overlay" />

    <style name="MainTheme.Overlay.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainTheme.Text" />

    <style name="MainTheme.Text.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/all_button_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MainTheme.Text.Input">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/all_input_text</item>
    </style>

    <style name="MainTheme.Widget" />

    <style name="MainTheme.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>

        <item name="android:insetLeft">@dimen/all_button_padding</item>
        <item name="android:insetRight">@dimen/all_button_padding</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="cornerRadius">@dimen/all_corner_size</item>
    </style>

    <style name="MainTheme.Widget.Button.Dark">
        <item name="android:backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="MainTheme.Widget.Button.Icon">
        <item name="iconSize">@dimen/all_icon_size</item>
        <item name="iconPadding">@dimen/all_icon_padding</item>
    </style>

    <style name="MainTheme.Widget.Button.Icon.Facebook">
        <item name="android:backgroundTint">@color/facebook</item>
    </style>

    <style name="MainTheme.Widget.Button.Icon.Google">
        <item name="android:backgroundTint">@color/google</item>
    </style>

    <style name="MainTheme.Widget.Button.Icon.Twitter">
        <item name="android:backgroundTint">@color/twitter</item>
    </style>

    <style name="MainTheme.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:colorControlHighlight">?attr/colorPrimaryDark</item>

        <item name="boxBackgroundColor">@color/white</item>
    </style>
</resources>
