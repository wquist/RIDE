<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_preview_view"
        android:contentDescription=""
        android:layout_width="0dp"
        android:layout_height="@dimen/item_preview_size"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        tools:src="@drawable/bg_icon" />

    <TextView
        android:id="@+id/item_name_text"
        android:textAppearance="@style/App.TextAppearance.Header"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_preview_margin"
        android:layout_marginBottom="@dimen/item_content_margin"
        app:layout_constraintStart_toEndOf="@id/item_preview_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Car Alarm" />

    <TextView
        android:id="@+id/item_description_text"
        android:textAppearance="@style/App.TextAppearance.Body"
        android:maxLines="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_preview_margin"
        app:layout_constraintStart_toEndOf="@id/item_preview_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name_text"
        tools:text="Sed ut perspiciatis, unde omnis iste natus error sit voluptatem accusantium dolorem" />

</androidx.constraintlayout.widget.ConstraintLayout>
