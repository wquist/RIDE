<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.LinearLayout"
    tools:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/oauth_rule_margin">
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/all_rule_height"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/all_rule_height"
            android:layout_marginHorizontal="@dimen/all_edge_margin"
            style="@style/MainTheme.Overlay.Rule" />
        <TextView
            android:text="OR"
            android:textAppearance="@style/MainTheme.Text.Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/all_rule_height"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/all_rule_height"
            android:layout_marginHorizontal="@dimen/all_edge_margin"
            style="@style/MainTheme.Overlay.Rule" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/oauth_facebook_button"
        android:text="FACEBOOK"
        android:textAppearance="@style/MainTheme.Text.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/all_edge_margin"
        style="@style/MainTheme.Widget.Button.Icon.Facebook" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/oauth_twitter_button"
        android:text="TWITTER"
        android:textAppearance="@style/MainTheme.Text.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/all_edge_margin"
        android:layout_marginVertical="@dimen/oauth_button_margin"
        style="@style/MainTheme.Widget.Button.Icon.Twitter" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/oauth_google_button"
        android:text="GOOGLE"
        android:textAppearance="@style/MainTheme.Text.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/all_edge_margin"
        style="@style/MainTheme.Widget.Button.Icon.Google" />


</merge>